<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="168dp"
    android:layout_height="168dp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="5dp">

    <ImageView
        android:id="@+id/img_item_listLatest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/layout_interactive_item_latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_2"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:src="@drawable/ic_eye_18dp" />

        <TextView
            android:id="@+id/tv_watched_latest"
            style="@style/font_Regular_moreSmall"
            android:layout_marginLeft="@dimen/dp_4"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/ic_like_24dp" />

        <TextView
            android:id="@+id/tv_liked_latest"
            style="@style/font_Regular_moreSmall"
            android:layout_marginLeft="@dimen/dp_4"
            android:textColor="@color/white" />
    </LinearLayout>

</android.support.v7.widget.CardView>